<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/home.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>
            com.epam.jwd_final.service.daily_payment.DailyPaymentServlet
        </listener-class>
    </listener>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.epam.jwd_final.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/Controller/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.epam.jwd_final.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/Controller/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TariffPageFilter</filter-name>
        <filter-class>com.epam.jwd_final.filter.TariffPageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TariffPageFilter</filter-name>
        <url-pattern>/Controller/*</url-pattern>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
</web-app>
